<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Login Window" Height="410" Width="515" Closing="Window_Closing">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="129" Margin="10,148,0,0" VerticalAlignment="Top" Width="481" >
            <StackPanel Orientation="Horizontal">
                <Label Content="User Name:" Margin="0,10,0,0" Width="70"/>
                <TextBox Margin="10,10,10,10" x:Name="username" Text="" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="157"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Password:" Margin="0,10,0,0" Width="70"/>
                <PasswordBox x:Name="password" Margin="10,10,10,10" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="157" Password=""/>
            </StackPanel>

            <Button x:Name="loginBtn" Content="Login" VerticalAlignment="Top" Width="75" Click="Login_Click" Margin="0,0,200,0"/>
        </StackPanel>
        <Button x:Name="registerBtn" Content="Register" VerticalAlignment="Top" Width="75" Click="Register_Click" HorizontalAlignment="Right" Margin="0,321,374.8,0" />
        <Button x:Name="exitBtn" Content="Exit" VerticalAlignment="Top" Width="75" Click="Exit_Click" HorizontalAlignment="Right" Margin="0,321,270,0" />
        <TextBlock Name="errorMessage" HorizontalAlignment="Left" Height="23" Margin="10,348,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="481"/>
    </Grid>
</Window>